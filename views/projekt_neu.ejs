<h1>➕ Neues Projekt</h1>
<form method="POST" action="/projekte/neu">
  <label>Kunde:</label><br>
  <select name="kunden_id" required>
    <% kunden.forEach(k => { %>
      <option value="<%= k.id %>"><%= k.vorname %> <%= k.name %></option>
    <% }) %>
  </select><br><br>

  <label>Projektname:</label><br>
  <input type="text" name="name" required><br><br>

  <label>Beschreibung:</label><br>
  <textarea name="beschreibung"></textarea><br><br>

  <label>Startdatum:</label><br>
  <input type="date" name="startdatum"><br><br>

  <label>Enddatum:</label><br>
  <input type="date" name="enddatum"><br><br>

  <label for="abteilung">Abteilung:</label>
<select name="abteilung" id="abteilung" required>
  <option value="PV">PV</option>
  <option value="Elektro">Elektro</option>
  <option value="Ladestation">Ladestation</option>
  <option value="Sicherheit">Sicherheit</option>
</select>


<label for="status">Status:</label>
<select name="status" id="status" required>
  <option value="Offerte erstellt">Offerte erstellt</option>
  <option value="Auftrag erhalten">Auftrag erhalten</option>
  <option value="In Arbeit">In Arbeit</option>
  <option value="Arbeiten erledigt">Arbeiten erledigt</option>
  <option value="Rechnung geschickt">Rechnung geschickt</option>
</select>



  <button type="submit">Speichern</button>
</form>
<a href="/projekte">⬅️ Zurück</a>
